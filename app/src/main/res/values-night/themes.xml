<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:spinnerItemStyle">
            @style/SpinnerTextViewItem
        </item>
        <!-- Status bar color. -->
        <!--
                <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AudioBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AudioBook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AudioBook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/grey3</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>


    <style name="Home.HeadingTitleLeft" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
    </style>

    <style name="Home.HeadingTitleRight" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:maxWidth">@dimen/_150sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">94%</item>
        <item name="android:windowMinWidthMinor">94%</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_top_curve</item>
    </style>


    <style name="Order.OrderIdText" parent="">
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="Order.OrderNumberText" parent="">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>


    <style name="Order.OrderDateText" parent="">
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Order.OrderContactText" parent="">
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Order.OrderProductPriceText" parent="">
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_19ssp</item>
    </style>

    <style name="OrderList.Toolbar" parent="">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Manage.ItemTitle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Home.Tab.Text" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >@dimen/_11sdp</item>
        <item name="android:textColor" >@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="OrderDetails.OrderDate" parent="">
        <item name="android:textColor">@color/grey2</item>

        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="OrderDetails.OrderCount" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="OrderDetails.OrderPrice" parent="">
        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="OrderDetails.OrderTotal" parent="">
        <item name="android:textColor">@color/grey1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="OrderDetails.DeliveryDetailsTitle" parent="">
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="EditProfile.Title" parent="">
        <item name="android:textColor">@color/grey1</item>

        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="OrderList.ToolbarTitle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTheme.CardBackground" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/cardview_shadow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AudioBook.BlueAccent">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>